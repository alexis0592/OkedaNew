<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bdc3c7"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextoUno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="El Fondo Nacional del AHORRO le proporciona créditos en UVR desde $14.167.500 hasta $850.050.000 y se rige por la normatividad vigente establecida para el otorgamiento de crédito. La tasa de interés de estos créditos es asignada de acuerdo a las condiciones financieras del afiliado y el valor oscila entre UVR + 5 % y UVR + 9 % dependiendo de su asignación básica mensual."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/TextoDos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="El Fondo Nacional del AHORRO le proporciona créditos en PESOS desde $9.633.900 hasta $850.050.000 y se rige por la normatividad vigente establecida para el otorgamiento de crédito."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:onClick="goToSimulator"
                android:src="@drawable/simuladorbtn" />

            <ImageView
                android:id="@+id/imageView44"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/okeda200" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>